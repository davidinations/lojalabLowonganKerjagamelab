{% extends "master.twig" %}

{% block title %}
    {% if admin %}
        Admin Dashboard
    {% else %}
        User Dashboard
    {% endif %}
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    {% if admin %}
                        Admin Dashboard
                        <small class="text-muted">{{ admin.role_name ?? 'Administrator' }}</small>
                    {% else %}
                        Welcome, {{ user.username ?? 'User' }}!
                    {% endif %}
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-cog"></i> Settings
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/profile">Edit Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            {% if admin %}
                <!-- Admin Dashboard Content -->
                <div class="row">
                    <!-- Quick Stats -->
                    <div class="col-md-3 mb-4">
                        <div class="card text-white bg-primary">
                            <div class="card-header">
                                <i class="fas fa-users"></i> Users
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">{{ stats.total_users ?? 0 }}</h4>
                                <p class="card-text">Total Users</p>
                            </div>
                            <div class="card-footer">
                                <a href="/admin/users" class="text-white">
                                    View All <i class="fas fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mb-4">
                        <div class="card text-white bg-success">
                            <div class="card-header">
                                <i class="fas fa-briefcase"></i> Jobs
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">{{ stats.total_jobs ?? 0 }}</h4>
                                <p class="card-text">Active Jobs</p>
                            </div>
                            <div class="card-footer">
                                <a href="/admin/jobs" class="text-white">
                                    View All <i class="fas fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mb-4">
                        <div class="card text-white bg-warning">
                            <div class="card-header">
                                <i class="fas fa-clipboard-list"></i> Applications
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">{{ stats.pending_applications ?? 0 }}</h4>
                                <p class="card-text">Pending Review</p>
                            </div>
                            <div class="card-footer">
                                <a href="/admin/applications" class="text-white">
                                    View All <i class="fas fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mb-4">
                        <div class="card text-white bg-info">
                            <div class="card-header">
                                <i class="fas fa-building"></i> Organizations
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">{{ stats.total_organizations ?? 0 }}</h4>
                                <p class="card-text">Companies</p>
                            </div>
                            <div class="card-footer">
                                <a href="/admin/organizations" class="text-white">
                                    View All <i class="fas fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Quick Actions</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    {% if admin.role_level <= 2 %}
                                        <a href="/admin/users/create" class="btn btn-outline-primary">
                                            <i class="fas fa-plus"></i> Add New User
                                        </a>
                                        <a href="/admin/jobs/create" class="btn btn-outline-success">
                                            <i class="fas fa-plus"></i> Post New Job
                                        </a>
                                        <a href="/admin/organizations/create" class="btn btn-outline-info">
                                            <i class="fas fa-plus"></i> Add Organization
                                        </a>
                                    {% endif %}
                                    {% if admin.role_level == 3 %}
                                        <a href="/admin/jobs/create" class="btn btn-outline-success">
                                            <i class="fas fa-plus"></i> Post New Job
                                        </a>
                                    {% endif %}
                                    <a href="/admin/applications" class="btn btn-outline-warning">
                                        <i class="fas fa-list"></i> Review Applications
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Management</h5>
                            </div>
                            <div class="card-body">
                                <div class="list-group list-group-flush">
                                    <a href="/admin/users" class="list-group-item list-group-item-action">
                                        <i class="fas fa-users"></i> Manage Users
                                        <span class="badge bg-primary rounded-pill float-end">{{ stats.total_users ?? 0 }}</span>
                                    </a>
                                    <a href="/admin/jobs" class="list-group-item list-group-item-action">
                                        <i class="fas fa-briefcase"></i> Manage Jobs
                                        <span class="badge bg-success rounded-pill float-end">{{ stats.total_jobs ?? 0 }}</span>
                                    </a>
                                    <a href="/admin/organizations" class="list-group-item list-group-item-action">
                                        <i class="fas fa-building"></i> Manage Organizations
                                        <span class="badge bg-info rounded-pill float-end">{{ stats.total_organizations ?? 0 }}</span>
                                    </a>
                                    <a href="/admin/applications" class="list-group-item list-group-item-action">
                                        <i class="fas fa-clipboard-list"></i> Manage Applications
                                        <span class="badge bg-warning rounded-pill float-end">{{ stats.pending_applications ?? 0 }}</span>
                                    </a>
                                    {% if admin.role_level <= 2 %}
                                        <a href="/admin/skills" class="list-group-item list-group-item-action">
                                            <i class="fas fa-cogs"></i> Manage Skills
                                        </a>
                                    {% endif %}
                                    {% if admin.role_level == 1 %}
                                        <a href="/admin/admins" class="list-group-item list-group-item-action">
                                            <i class="fas fa-user-shield"></i> Manage Admins
                                        </a>
                                        <a href="/admin/roles" class="list-group-item list-group-item-action">
                                            <i class="fas fa-user-tag"></i> Manage Roles
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            {% else %}
                <!-- User Dashboard Content -->
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Available Jobs</h5>
                            </div>
                            <div class="card-body">
                                <p>Find and apply for your dream job!</p>
                                <a href="/jobs" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Browse Jobs
                                </a>
                            </div>
                        </div>

                        <div class="card mt-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">My Applications</h5>
                            </div>
                            <div class="card-body">
                                {% if applications and applications|length > 0 %}
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Job</th>
                                                    <th>Applied</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for application in applications|slice(0, 5) %}
                                                <tr>
                                                    <td>{{ application.job_title }}</td>
                                                    <td>{{ application.create_time|date('d M Y') }}</td>
                                                    <td>
                                                        {% if application.status == 'pending' %}
                                                            <span class="badge bg-warning">Pending</span>
                                                        {% elseif application.status == 'approved' %}
                                                            <span class="badge bg-success">Approved</span>
                                                        {% elseif application.status == 'rejected' %}
                                                            <span class="badge bg-danger">Rejected</span>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <a href="/my-applications" class="btn btn-outline-primary btn-sm">
                                        View All Applications
                                    </a>
                                {% else %}
                                    <p class="text-muted">You haven't applied for any jobs yet.</p>
                                    <a href="/jobs" class="btn btn-outline-primary">
                                        <i class="fas fa-search"></i> Start Browsing Jobs
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Profile Completion</h6>
                            </div>
                            <div class="card-body">
                                <p class="small text-muted">Complete your profile to improve your chances!</p>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: {{ profile_completion ?? 50 }}%">
                                        {{ profile_completion ?? 50 }}%
                                    </div>
                                </div>
                                <a href="/profile/edit" class="btn btn-outline-info btn-sm mt-2">
                                    <i class="fas fa-edit"></i> Update Profile
                                </a>
                            </div>
                        </div>

                        <div class="card mt-3">
                            <div class="card-header">
                                <h6 class="card-title mb-0">Quick Actions</h6>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a href="/jobs" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-search"></i> Browse Jobs
                                    </a>
                                    <a href="/my-applications" class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-list"></i> My Applications
                                    </a>
                                    <a href="/profile" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-user"></i> View Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}