{% extends "master.twig" %}

{% block title %}Manage Organizations{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Manage Organizations</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="/admin/organizations/create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Organization
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    {% if organizations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Organization Name</th>
                                        <th>Description</th>
                                        <th>Admins</th>
                                        <th>Jobs</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for organization in organizations %}
                                    <tr>
                                        <td>{{ organization.id }}</td>
                                        <td>
                                            <strong>{{ organization.nama }}</strong>
                                        </td>
                                        <td>
                                            {% if organization.deskripsi %}
                                                {{ organization.deskripsi|slice(0, 100) }}{% if organization.deskripsi|length > 100 %}...{% endif %}
                                            {% else %}
                                                <span class="text-muted">No description</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-info">{{ organization.admin_count ?? 0 }}</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">{{ organization.job_count ?? 0 }}</span>
                                        </td>
                                        <td>
                                            {% if organization.archived == 0 %}
                                                <span class="badge bg-success">Active</span>
                                            {% else %}
                                                <span class="badge bg-danger">Archived</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/admin/organizations/{{ organization.id }}" class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/admin/organizations/{{ organization.id }}/edit" class="btn btn-sm btn-outline-warning" title="Edit Organization">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" title="Delete Organization" 
                                                        onclick="deleteOrganization({{ organization.id }}, '{{ organization.nama }}')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-building fa-3x text-muted mb-3"></i>
                            <h5>No Organizations Found</h5>
                            <p class="text-muted">There are no organizations in the system yet.</p>
                            <a href="/admin/organizations/create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add First Organization
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete organization <strong id="deleteOrgName"></strong>?</p>
                <p class="text-muted">This action will archive the organization and cannot be undone. All associated admins and jobs will be affected.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <input type="hidden" name="_METHOD" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete Organization</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function deleteOrganization(orgId, orgName) {
    document.getElementById('deleteOrgName').textContent = orgName;
    document.getElementById('deleteForm').action = '/admin/organizations/' + orgId;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>
{% endblock %}
