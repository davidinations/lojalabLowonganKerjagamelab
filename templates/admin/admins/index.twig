{% extends "master.twig" %}

{% block title %}Manage Administrators{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Manage Administrators</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="/admin/admins/create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Admin
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    {% if admins|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Organization</th>
                                        <th>Created</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for admin_user in admins %}
                                    <tr>
                                        <td>{{ admin_user.id }}</td>
                                        <td>
                                            <strong>{{ admin_user.username }}</strong>
                                        </td>
                                        <td>{{ admin_user.email }}</td>
                                        <td>
                                            {% if admin_user.role_level == 1 %}
                                                <span class="badge bg-danger">{{ admin_user.role_name }}</span>
                                            {% elseif admin_user.role_level == 2 %}
                                                <span class="badge bg-warning">{{ admin_user.role_name }}</span>
                                            {% elseif admin_user.role_level == 3 %}
                                                <span class="badge bg-info">{{ admin_user.role_name }}</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ admin_user.role_name ?? 'Unknown' }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if admin_user.organization_name %}
                                                {{ admin_user.organization_name }}
                                            {% else %}
                                                <span class="text-muted">All Organizations</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if admin_user.create_time %}
                                                {{ admin_user.create_time|date('d M Y') }}
                                            {% else %}
                                                <span class="text-muted">Unknown</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if admin_user.archived == 0 %}
                                                <span class="badge bg-success">Active</span>
                                            {% else %}
                                                <span class="badge bg-danger">Archived</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/admin/admins/{{ admin_user.id }}" class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                {% if admin_user.id != admin.id %}
                                                    <a href="/admin/admins/{{ admin_user.id }}/edit" class="btn btn-sm btn-outline-warning" title="Edit Admin">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" title="Delete Admin" 
                                                            onclick="deleteAdmin({{ admin_user.id }}, '{{ admin_user.username }}')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-user-shield fa-3x text-muted mb-3"></i>
                            <h5>No Administrators Found</h5>
                            <p class="text-muted">There are no administrators in the system yet.</p>
                            <a href="/admin/admins/create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add First Administrator
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete administrator <strong id="deleteAdminUsername"></strong>?</p>
                <p class="text-muted">This action will archive the administrator and cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <input type="hidden" name="_METHOD" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete Administrator</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function deleteAdmin(adminId, username) {
    document.getElementById('deleteAdminUsername').textContent = username;
    document.getElementById('deleteForm').action = '/admin/admins/' + adminId;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>
{% endblock %}
