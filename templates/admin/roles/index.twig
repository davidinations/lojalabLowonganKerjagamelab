{% extends "master.twig" %}

{% block title %}Manage Roles{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Manage Roles</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoleModal">
                        <i class="fas fa-plus"></i> Add New Role
                    </button>
                </div>
            </div>

            <!-- Roles Overview -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Role Hierarchy</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> 
                                <strong>Role Levels:</strong> Lower numbers = higher permissions. Level 1 has the most access, higher levels have more restrictions.
                            </div>
                            
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="card border-primary">
                                        <div class="card-header bg-primary text-white">
                                            <h6 class="mb-0">Level 1</h6>
                                        </div>
                                        <div class="card-body">
                                            <h6>Super Admin</h6>
                                            <small class="text-muted">Full system control</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border-success">
                                        <div class="card-header bg-success text-white">
                                            <h6 class="mb-0">Level 2</h6>
                                        </div>
                                        <div class="card-body">
                                            <h6>Admin</h6>
                                            <small class="text-muted">Organization management</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border-warning">
                                        <div class="card-header bg-warning text-white">
                                            <h6 class="mb-0">Level 3</h6>
                                        </div>
                                        <div class="card-body">
                                            <h6>Recruiter</h6>
                                            <small class="text-muted">Job posting & review</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border-info">
                                        <div class="card-header bg-info text-white">
                                            <h6 class="mb-0">Level 4</h6>
                                        </div>
                                        <div class="card-body">
                                            <h6>Viewer</h6>
                                            <small class="text-muted">Read-only access</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Roles Table -->
            <div class="card">
                <div class="card-body">
                    {% if roles|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Role Name</th>
                                        <th>Level</th>
                                        <th>Permissions</th>
                                        <th>Admins</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for role in roles %}
                                    <tr>
                                        <td>{{ role.id }}</td>
                                        <td>
                                            <strong>{{ role.nama }}</strong>
                                            {% if role.level == 1 %}
                                                <span class="badge bg-primary ms-1">SUPER</span>
                                            {% elseif role.level == 2 %}
                                                <span class="badge bg-success ms-1">ADMIN</span>
                                            {% elseif role.level == 3 %}
                                                <span class="badge bg-warning ms-1">RECRUITER</span>
                                            {% elseif role.level == 4 %}
                                                <span class="badge bg-info ms-1">VIEWER</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">Level {{ role.level }}</span>
                                        </td>
                                        <td>
                                            {% if role.level == 1 %}
                                                <small class="text-success">Full System Access</small>
                                            {% elseif role.level == 2 %}
                                                <small class="text-primary">Organization Management</small>
                                            {% elseif role.level == 3 %}
                                                <small class="text-warning">Job Management Only</small>
                                            {% elseif role.level == 4 %}
                                                <small class="text-info">View-Only Access</small>
                                            {% else %}
                                                <small class="text-muted">Custom Permissions</small>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">{{ role.admin_count ?? 0 }}</span>
                                        </td>
                                        <td>
                                            {% if role.archived == 0 %}
                                                <span class="badge bg-success">Active</span>
                                            {% else %}
                                                <span class="badge bg-danger">Archived</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-outline-warning" title="Edit Role"
                                                        onclick="editRole({{ role.id }}, '{{ role.nama }}', {{ role.level }}, {{ role.archived }})">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                {% if role.level > 1 %}
                                                    <button type="button" class="btn btn-sm btn-outline-danger" title="Delete Role"
                                                            onclick="deleteRole({{ role.id }}, '{{ role.nama }}')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                {% else %}
                                                    <button type="button" class="btn btn-sm btn-outline-secondary" disabled title="Cannot delete Super Admin role">
                                                        <i class="fas fa-lock"></i>
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-user-tag fa-3x text-muted mb-3"></i>
                            <h5>No Roles Found</h5>
                            <p class="text-muted">There are no roles in the system yet.</p>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoleModal">
                                <i class="fas fa-plus"></i> Add First Role
                            </button>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Role Modal -->
<div class="modal fade" id="createRoleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/admin/roles" id="createRoleForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="create_nama" class="form-label">Role Name *</label>
                        <input type="text" class="form-control" id="create_nama" name="nama" required>
                    </div>                                    <div class="mb-3">
                                        <label for="create_level" class="form-label">Role Level *</label>
                                        <select class="form-select" id="create_level" name="level" required onchange="updateCreateDescription()">
                                            <option value="">Select level...</option>
                                            <option value="1">Level 1 - Super Admin</option>
                                            <option value="2">Level 2 - Admin</option>
                                            <option value="3">Level 3 - Recruiter</option>
                                            <option value="4">Level 4 - Viewer</option>
                                            <option value="5">Level 5 - Custom</option>
                                        </select>
                                        <div class="form-text" id="create_level_description">
                                            Select a level to see permissions
                                        </div>
                                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Role</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Role Modal -->
<div class="modal fade" id="editRoleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" id="editRoleForm">
                <input type="hidden" name="_METHOD" value="PUT">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="edit_nama" class="form-label">Role Name *</label>
                        <input type="text" class="form-control" id="edit_nama" name="nama" required>
                    </div>                                    <div class="mb-3">
                                        <label for="edit_level" class="form-label">Role Level *</label>
                                        <select class="form-select" id="edit_level" name="level" required onchange="updateEditDescription()">
                                            <option value="1">Level 1 - Super Admin</option>
                                            <option value="2">Level 2 - Admin</option>
                                            <option value="3">Level 3 - Recruiter</option>
                                            <option value="4">Level 4 - Viewer</option>
                                            <option value="5">Level 5 - Custom</option>
                                        </select>
                                        <div class="form-text" id="edit_level_description">
                                            Select a level to see permissions
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="edit_archived" class="form-label">Status</label>
                                        <select class="form-select" id="edit_archived" name="archived">
                                            <option value="0">Active</option>
                                            <option value="1">Archived</option>
                                        </select>
                                        <div class="form-text">Archived roles cannot be assigned to new admins</div>
                                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Role</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete role <strong id="deleteRoleName"></strong>?</p>
                <p class="text-muted">This action cannot be undone and will affect all admins assigned to this role.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <input type="hidden" name="_METHOD" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete Role</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function updateCreateDescription() {
    const levelSelect = document.getElementById('create_level');
    const selectedLevel = levelSelect.value;
    const descriptionDiv = document.getElementById('create_level_description');
    
    let description = '';
    switch(selectedLevel) {
        case '1':
            description = '<strong>Super Admin:</strong> Complete system control, can manage all admins, organizations, users, jobs, and settings.';
            break;
        case '2':
            description = '<strong>Admin:</strong> Can manage users, jobs, applications, and specific organizations. Cannot manage other admins.';
            break;
        case '3':
            description = '<strong>Recruiter:</strong> Limited to creating/editing jobs and reviewing applications for assigned organization only.';
            break;
        case '4':
            description = '<strong>Viewer:</strong> Read-only access to all data. Cannot create, edit, or delete anything.';
            break;
        case '5':
            description = '<strong>Custom:</strong> Define custom permissions for this role.';
            break;
        default:
            description = 'Select a level to see permissions';
    }
    
    descriptionDiv.innerHTML = description;
}

function updateEditDescription() {
    const levelSelect = document.getElementById('edit_level');
    const selectedLevel = levelSelect.value;
    const descriptionDiv = document.getElementById('edit_level_description');
    
    let description = '';
    switch(selectedLevel) {
        case '1':
            description = '<strong>Super Admin:</strong> Complete system control, can manage all admins, organizations, users, jobs, and settings.';
            break;
        case '2':
            description = '<strong>Admin:</strong> Can manage users, jobs, applications, and specific organizations. Cannot manage other admins.';
            break;
        case '3':
            description = '<strong>Recruiter:</strong> Limited to creating/editing jobs and reviewing applications for assigned organization only.';
            break;
        case '4':
            description = '<strong>Viewer:</strong> Read-only access to all data. Cannot create, edit, or delete anything.';
            break;
        case '5':
            description = '<strong>Custom:</strong> Define custom permissions for this role.';
            break;
        default:
            description = 'Select a level to see permissions';
    }
    
    descriptionDiv.innerHTML = description;
}

function editRole(id, nama, level, archived) {
    document.getElementById('edit_nama').value = nama;
    document.getElementById('edit_level').value = level;
    document.getElementById('edit_archived').value = archived;
    document.getElementById('editRoleForm').action = '/admin/roles/' + id;
    updateEditDescription();
    new bootstrap.Modal(document.getElementById('editRoleModal')).show();
}

function deleteRole(roleId, roleName) {
    document.getElementById('deleteRoleName').textContent = roleName;
    document.getElementById('deleteForm').action = '/admin/roles/' + roleId;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>
{% endblock %}
